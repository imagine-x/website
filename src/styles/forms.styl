input {
    width: 100%
    height: 50px
    border: 1px solid #dddddd
    margin-bottom: 12px
    padding: 10px
    font-size: fontSize
    border-radius:0
    font-family: font;
}
::-webkit-input-placeholder {
  color: primaryColour;
  font-family: font;
  font-size: fontSize;
}

input:focus {
  border-color: primaryColour;
}

input[type="checkbox"] {
    height: initial;
    width: initial;
}

.checkbox-container {
    margin-top: 0.25rem;
    margin-bottom: 1rem;
}

.checkbox__label {
    font-weight: normal;
    display: inline;
    padding-left: 0.75rem;
}